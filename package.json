{
  "name": "@dataforsyningen/designsystem",
  "version": "4.0.3",
  "description": "Common design system for SDFI with CSS, icons, UI components, and logo images.",
  "type": "module",
  "author": {
    "name": "Styrelsen for Dataforsyning og Infrastruktur",
    "email": "support@sdfi.dk",
    "url": "https://sdfi.dk/"
  },
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npm run build-css && npm run build-js && npm run build-docs",
    "build-css": "sass index.scss assets/designsystem.css --style compressed",
    "build-js": "node_modules/.bin/esbuild ./index.js --bundle --outfile=assets/designsystem.js --format=esm",
    "build-docs": "node src/bin/build-docs.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "SDFI",
    "Styrelsen for Dataforsyning og Infrastruktur",
    "designsystem",
    "icons",
    "stylesheets",
    "logos",
    "UI components"
  ],
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.19.0",
    "sass": "^1.69.0"
  }
}
